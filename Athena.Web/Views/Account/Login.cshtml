@model Athena.Web.Models.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="row justify-content-center">
        <div class="col-6">
            <h1>Login</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="form-group">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", placeholder = "username" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "password" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
        </div>
    </div>
}